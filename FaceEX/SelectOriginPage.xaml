<Page
    x:Class="FaceEX.SelectOriginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:Name="Image" Click="ButtonBase_OnClick_Image" Content="Upload a file" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,67">
        </Button>
        <TextBox x:Name="PersonName"  VerticalAlignment="Bottom" Height="66" Text="" Width="1152" PlaceholderText="Write the person's name"/>
        <Button x:Name="Validate" Content="Search" VerticalAlignment="Bottom" HorizontalAlignment="Right" Height="66" Width="342" Click="Search_person"/>
    </Grid>
</Page>
